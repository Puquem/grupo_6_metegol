<!DOCTYPE html>
<html lang="en">
<head>
	<%- include("../partials/head.ejs")%> 
	<!--===============================================================================================-->
	<link rel="stylesheet" href="/css/fieldList.css">
	
	<title>METEGOL | Listado de canchas</title>
</head>

<body>
	
	<!--Header-->
	<%- include("../partials/header.ejs")%> 
	
	<!--Main Content-->
	<div class="align">
		<div class="box">
			<h1>Listado de canchas</h1>
			<div class="row">
				
				<% fields.forEach( field => { %>

					<div class="col-lg-3 col-md-6 mb-">
						<div class="card h-100">
							<a href="#"><img class="card-img-top" src=<%= field.image1 %> alt=""></a>
							<div class="card-body">
								<h4 class="card-title">
									<a href="#"><%= field.name %></a>
								</h4>
								<p class="card-text"><%= field.description %></p>
							</div>
							<div class="card-footer">
								<button type="submit" class="btn btn-primary" href="/fields/<%= field.id %>">ver detalle</button>	
							</div>
						</div>
					</div>
				<% })%>
				
			</div>
		</div>
	</div>
	
	<!--Footer -->
	<%- include("../partials/footer.ejs")%> 
	
 </body>
</html>
