	<title>METEGOL | Detalle Cancha</title>
</head>
<body style="background-color:rgb(2, 160, 94);">
	<div>
		
		<!--Header-->
		<header class="header">
			<div class="header-container">
				<a href="#default" class="logo"><img src="/images/logo.png" alt="logo de metegol"></a>
				<div class="header-right">
					<ul>
						<li><a href="/buscoequipo">BUSCO EQUIPO</a></li>
						<li><a href="/torneo">TORNEOS</a></li>
						<li><a href="/carrito" title="Carrito"><i class="fas fa-shopping-cart"></i></a></li>
						<li><a href="/login" title="Log in"><i class="fas fa-user"></i></i></a></li>
					</ul>
				</div>
				<a href="#" class="hamburguer-icon">TRES RAYITAS</a>
			</div>
		</header>
		<p class="nombreCancha"> <%= cancha.name %></p>
	<div class="body">
		<div id="myCarousel" class="carousel slide" data-ride="carousel">
			<!-- Indicators -->
			<ol class="carousel-indicators">
				<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
				<li data-target="#myCarousel" data-slide-to="1"></li>
				<li data-target="#myCarousel" data-slide-to="2"></li>
			</ol>
		
			<!-- Wrapper for slides -->
			<div class="carousel-inner">
				<div class="item active">
					<img src="<%= cancha.image1 %>" class="fotoCancha" alt="">
				</div>
				<div class="item">
					<img src="<%= cancha.image2 %>" class="fotoCancha" alt="">
				</div>
				<div class="item">
					<img src="<%= cancha.image3 %>" class="fotoCancha" alt="">
				</div>
			</div>
		
			<!-- Controls -->
			<a class="left carousel-control" href="#myCarousel" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="right carousel-control" href="#myCarousel" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
			<!-- Descripcion cancha -->	
	
		<div class="descripcion">
			<h1 class="titulo">Dirección</h1>
			<p><%= cancha.Address %></p>
			<a href="https://www.google.com/maps/search/<%= cancha.name %>" frameborder='0'>Ver ubicacion en mapa</a> 
			<h1 class="titulo">Teléfono</h1>
			<p><%= cancha.phone %></p>
			<h1>Servicios</h1>
			<p><%= cancha.description %></p>
		</div> 	
		<section class="reserva">
			<form action="action_page.php" method="post">
				<div class="contenedor">
					<h1>RESERVA</h1>
					   
					  	<select class="selector" name="horario">
							  <option disabled selected>Seleccione un horario</option>
							  <option value="7">19hs</option>
							  <option value="8">20hs</option>
							  <option value="9">21hs</option>
							  <option value="10">22hs</option>
							  <option value="11">23hs</option>
							  
						  </select>
						  <select class="selector" name="cantJugadores">
							<option disabled selected>Cantidad de jugadores</option>
							<option value="5">5 jugadores</option>
							<option value="7"> 7 jugadores</option>
							<option value="11"> 11 jugadores</option>
						</select>
					  
						  <div><button type="submit" class="btn btn-primary">CONFIRMAR RESERVA</button></div> 
				</div>
			</form>
		</section>
	</div>
</div>
		
		<!--Footer-->
		<footer class="footer fixed-bottom">
			<div class="footer-left">
				<a href="https://facebook.com"><i class="fab fa-facebook-f"></i></a>
				<a href="https://instagram.com"><i class="fab fa-instagram"></i></a>
				<a href="https://twitter.com"><i class="fab fa-twitter"></i></a>
			</div>
			<div class="footer-right">
				<ul>
					<li><a href="/proovedores">¿Querés ser proovedor?</a></li>
					<li><a href="/quienesomos">¿Quiénes somos?</a></li>
					<li><a href="/pfrecuentes">Preguntas frecuentes</a></li>
				</ul>
			</div>
		</footer>

